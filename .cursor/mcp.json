{
  "mcpServers": {
    "bitcompass": {
      "type": "stdio",
      "command": "node",
      "args": [
        "${workspaceFolder}/packages/bitcompass-cli/dist/index.js",
        "mcp",
        "start"
      ],
      "env": {
        "BITCOMPASS_CONFIG_DIR": "${userHome}/.bitcompass"
      },
      "envFile": "${workspaceFolder}/packages/bitcompass-cli/.env"
    }
  }
}
